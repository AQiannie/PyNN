<?xml version='1.0' encoding='UTF-8'?>
<NineML xmlns="http://nineml.org/9ML/0.2">
  <ComponentClass name="iaf_tau">
    <AnalogPort mode="send" name="v"/>
    <AnalogPort mode="reduce" reduce_op="+" name="i_syn"/>
    <EventPort mode="send" name="spike_output"/>
    <Parameter dimension="" name="cm"/>
    <Parameter dimension="" name="tau_refrac"/>
    <Parameter dimension="" name="tau_m"/>
    <Parameter dimension="" name="v_reset"/>
    <Parameter dimension="" name="v_rest"/>
    <Parameter dimension="" name="v_thresh"/>
    <Parameter dimension="" name="i_offset"/>
    <Dynamics>
      <Regime name="subthreshold_regime">
        <TimeDerivative variable="v">
          <MathInline>(v_rest - v)/tau_m + (i_offset + i_syn)/cm</MathInline>
        </TimeDerivative>
        <OnCondition target_regime="refractory_regime">
          <StateAssignment variable="t_spike">
            <MathInline>t</MathInline>
          </StateAssignment>
          <StateAssignment variable="v">
            <MathInline>v_reset</MathInline>
          </StateAssignment>
          <OutputEvent port="spike_output"/>
          <Trigger>
            <MathInline>v &gt; v_thresh</MathInline>
          </Trigger>
        </OnCondition>
      </Regime>
      <Regime name="refractory_regime">
        <TimeDerivative variable="v">
          <MathInline>0</MathInline>
        </TimeDerivative>
        <OnCondition target_regime="subthreshold_regime">
          <Trigger>
            <MathInline>t &gt;= t_spike + tau_refrac</MathInline>
          </Trigger>
        </OnCondition>
      </Regime>
      <StateVariable dimension="" name="v"/>
      <StateVariable dimension="" name="t_spike"/>
    </Dynamics>
  </ComponentClass>
</NineML>
