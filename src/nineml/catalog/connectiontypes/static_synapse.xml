<?xml version='1.0' encoding='UTF-8'?>
<NineML xmlns="http://nineml.org/9ML/0.2">
  <ComponentClass name="static_synapse">
    <AnalogPort mode="send" name="w"/>
    <EventPort mode="send" name="spikeoutput"/>
    <EventPort mode="recv" name="spikeinput"/>
    <Parameter dimension="" name="delay"/>
    <Parameter dimension="" name="weight"/>
    <Dynamics>
      <Regime name="delay">
        <OnEvent target_regime="delay" src_port="spikeinput">
          <StateAssignment variable="t_delivery">
            <MathInline>t + delay</MathInline>
          </StateAssignment>
        </OnEvent>
        <OnCondition target_regime="delay">
          <EventOut port="spikeoutput"/>
          <Trigger>
            <MathInline>t &gt;= t_delivery</MathInline>
          </Trigger>
        </OnCondition>
      </Regime>
      <Alias name="w">
        <MathInline>weight</MathInline>
      </Alias>
      <StateVariable dimension="" name="t_delivery"/>
    </Dynamics>
  </ComponentClass>
</NineML>
